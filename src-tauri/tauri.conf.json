{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PACDeluxe",
  "version": "1.0.0",
  "identifier": "com.pacdeluxe",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "resources": ["assets/*"],
    "publisher": "RyanAbsoGoofyChungus",
    "copyright": "Copyright (c) 2024 RyanAbsoGoofyChungus",
    "category": "Game",
    "shortDescription": "Performance client for Pokemon Auto Chess",
    "longDescription": "PACDeluxe is a native Windows 11 desktop client for Pokemon Auto Chess that provides smoother frame pacing, lower input latency, and reduced memory usage compared to browser-based play.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
